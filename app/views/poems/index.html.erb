<div class="page-header">
  <% unless @search_params %>
    <h1>みんなのポエム一覧</h1>
  <% else %>
    <h1><%= "「#{@search_params&.fetch('keywords')}」の検索結果"%> <small><%= "(#{@poems.total_count}件)" %></small></h1>
  <% end %>
</div>
<p>
<%= link_to "ポエムを作成する", new_poem_path, class: "btn btn-primary btn-lg" %>
</p>
<ul class="list-group">
  <% @poems.each_slice(3) do |poems| %>
    <div class="row">
      <% poems.each do |poem| %>
        <li class="list-group-item col-md-4">
          <%= link_to poem do %>
            <div class="medila">
              <div class="media-left">
                <%= image_tag(poem.icon_url, class: "img-circle", width: 60)  if poem.icon_url %>
              </div>
              <div class="media-body">
                <div class="media-heading">
                  <span class="link-text"><%= poem.title.truncate(15) %></span>
                </div>
                <div class="media-content">
                  <%= poem.author_name %>
                </div>
                <div class="text-right">
                  <%= l poem.created_at %>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </div>
  <% end %>
</ul>
<div class="row text-center">
  <%= paginate @poems %>
</div>
