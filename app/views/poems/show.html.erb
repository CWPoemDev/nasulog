<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <div class="panel-body">
      <div class="page-header">
        <h1><%= @poem.title %></h1>
      </div>
      <div class="poem-area">
        <p>
          <%= markdown(@poem.description) %>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <div class="panel-body">
      <div class="media-left">
        <%= image_tag current_user.icon_url, class: "img-circle", width: 40 %>
      </div>
      <div class="media-body">
        <div>
          <%= current_user.name %>
        </div>
        <div>
          <%= @poem.created_at %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <%= link_to "読んだよ", poem_read_poems_path(@poem), method: :post, class: "btn btn-primary"%>
    <% @read_poems.each do |read_poem| %>
      <span><%= link_to image_tag(read_poem.icon_url, class: "img-circle", width: 35 ),
                read_poem_path(read_poem), method: :delete %></span>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <ul class="nav nav-pills">
      <li role="presentation"><%= link_to_if( current_user.my_poem?(@poem), "ポエムを編集する", edit_poem_path(@poem)){} %></li>
      <li role="presentation"><%= link_to_if( current_user.my_poem?(@poem), "自分のポエム一覧に戻る", poems_path){} %></li>
      <li role="presentation"><%= link_to "みんなのポエム一覧に戻る", home_index_path%></li>
    </ul>
  </div>
</div>
