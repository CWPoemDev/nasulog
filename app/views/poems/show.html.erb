<div class="page-header">
  <h1><%= @poem.title %></h1>
</div>
<div class="poem-area">
  <p>
    <%= markdown(@poem.description) %>
  </p>
</div>
<div>
  <%= link_to "読んだよ", read_poems_path(@poem), method: :post, action: :create, class: "btn btn-primary"%>
  <% @read_poems.each do |read_poem| %>
    <span><%= link_to image_tag(read_poem.user.image_url, class: "img-circle", width: 35 ),
              read_poem_path(read_poem), method: :delete, action: :destroy %></span>
  <% end %>
</div>
<div>
  <ul class="nav nav-pills">
    <li role="presentation"><%= link_to_if current_user.my_poem?(@poem), "ポエムを編集する", edit_poem_path(@poem) %></li>
    <li role="presentation"><%= link_to_if current_user.my_poem?(@poem), "自分のポエム一覧に戻る", poems_path %></li>
    <li role="presentation"><%= link_to "みんなのポエム一覧に戻る", home_index_path%></li>
  </ul>
</div>
