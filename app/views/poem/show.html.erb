<div class="page-header">
  <h1><%= @poem.title %></h1>
</div>
<div class="poem-area">
  <p>
    <%= markdown(@poem.description) %>
  </p>
</div>
<div class="user_operation">
  <span class="read_mark btn btn-primary">読んだよマークをつける</span><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
</div>
<div class="navigation">
  <ul class="nav nav-pills">
    <li role="presentation"><%= link_to "ポエムを編集する", edit_poem_path(@poem) if is_mine %></li>
    <li role="presentation"><%= link_to "自分のポエム一覧に戻る", poem_index_path if is_mine %></li>
    <li role="presentation"><%= link_to "みんなのポエム一覧に戻る", home_index_path%></li>
  </ul>
</div>
